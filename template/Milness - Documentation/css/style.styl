@import 'prettify.css'



body, html
	margin 0
	padding 0

body, input, h1, h2, h3, h4, h5, h6
	font-family "Source Sans Pro", Helvetica, Arial, "Lucida Grande", sans-serif
	font-weight 300
	font-size 18px
	
$c1 = #222	
$fw = #fefefe
$cc = #928b78

body
	line-height 2
	color #666
	background $fw
	min-width 320px

img
	max-width 100%

iframe
	max-width 100%
	max-height 100%

img
	height auto

.btn
	background darken($c1, 20%)
	color #fff
	transition all  250ms
	&:hover
		background #333

.btn-download
	border-radius 0 4px 0 0
	font-weight bold
	width 25px
	overflow hidden
	img
		width 25px
		float left
		margin-top 18px
		margin-right 15px
	&:hover
		width 165px

iframe
	border 0 !important

.wrapper
	margin 20px 40px
	border-radius 4px
	box-shadow 0 0 2px 2px rgba(155, 155, 155, 0.1)
	border 1px solid #d3d3d3

header
	width 100%
	overflow hidden

.container
	width 95%
	max-width 650px
	position relative

strong, dt, h3, h4
	font-weight 600

h1, h2, h3, h4, h5, h6
	margin 10px 0
	line-height 20px
	color inherit
	text-rendering optimizelegibility

h1, h2, h3
	line-height 40px

h2
	font-size 22px
	line-height 1.2

h3
	font-size 24.5px

h4
	font-size 17.5px

h5
	font-size 14px

h6
	font-size 11.9px

hr
	background #EEE
	border 0
	height 1px
	margin 40px 0 40px

blockquote
	margin 1em 0
	border-left 3px solid #ccc
	padding-left 20px
	text-align left

dt

dd
	padding 0
	margin 0 0 25px 0

a
	transition all ease 150ms
	text-decoration none
	color $c1
	&:hover
		text-decoration underline
	&:active
		color darken($c1,6%)

//  Header Styles



header
	padding 2em 0 2em 0
	background $c1
	color $cc
	font-weight 600
	span
		color #fff
		font-weight 400

h1
	margin 0
	padding 0
	float left

header h2
	margin 0 0 1em 0
	&.lone-header
		margin 0
		padding-left 15px

footer
	text-align center
	padding 1.5em 0
	background #fff
	border-radius 0 0 4px 4px
	p
		margin 0
		color #999

.pull-right
	float right

.pull-left
	float left

// Navigation Styles

nav
	background #fff
	padding 0
	min-height 60px
	border-radius 5px 5px 0 0
	ul, li
		margin 0
		padding 0
		list-style none
	a
		padding 0 1em
		text-decoration none !important
		font-size .9em
		height 60px
		line-height 60px
		display block
	h1
		padding 7px 1em
		height 46px
		line-height 0
		height 45px
		line-height 60px
		color #000
		img
			margin-right 10px
			float left
			margin-top 9px
		span
			float left
			margin-top -5px
	a:active
		color #fff
		cursor default
	ul.site
		padding 20px 0 0 0
	#menu
		overflow hidden
		max-height 0
		clear left
	#menu-toggle
		position absolute
		right 0
		top 0
		font-size 1.5em
		padding 0 16px

@media (min-width 680px)
	nav
		height 60px !important
		#menu
			height 60px !important
		li, a
			float left
		ul.site
			float left
			padding 0
			clear none
			li
				margin 0 0 0 10px
		#menu-toggle
			display none !important
		#menu
			max-height 9999px
			clear none

section
	padding 1em 0 3em
	text-align center
	&.vibrant
		background #222
		color #fff
		h4
			line-height 2
			font-weight normal
			width 90%
			margin 0 auto

nav
	&::before, &::after
		content " "
		display table

header
	&::before, &::after
		content " "
		display table

section
	&::before, &::after
		content " "
		display table

nav::after, header::after, section::after
	clear both

nav, header, section
	*zoom 1



input
	display block
	vertical-align middle
	line-height 30px
	margin 0 auto
	width 100%
	max-width 400px
	box-sizing border-box
	transition all linear 0.2s
	&:focus
		border-color darken($c1, 10%)
		outline 0

.docs-nav
	background-color #f5f5f5
	list-style none
	margin 0 0 0 20px
	padding 15px 20px
	font-size 0.97em
	a
		display block
		margin 0 -20px
		padding 0 20px
		text-decoration none
		border-right 2px solid transparent

@media (min-width 960px)
	.docs-nav
		position absolute
		top 0
		width 220px
		transition top linear 50ms
		&.fixed
			position fixed
			top 49px
			width 220px
		a
			&:hover
				background $c1
				color #fff
			&:active
				background $c1
				color #fff
				border-right 2px solid $cc
		.active
			background $c1
			color #fff
			border-right 2px solid #ccc
		.separator
			height 20px
	.docs-content
		padding-left 310px
	header
		padding 1em 0 1em 0
	.container
		max-width 1000px
		padding 0 20px
	section
		padding 3em 0
		text-align left
		background #fff
		&.centered
			text-align center
	input
		display inline-block


p.note
	padding 20px
	background-color rgba(209,35,52, 0.2)

p.info
	padding 20px
	background-color rgba(221,227,61, 0.2)




@media (max-width  768px)
	.wrapper
		margin 0
		border none
		box-shadow none
		border-radius 0px 0px 0px 0px
	.nav
		border-radius 0px 0px 0px 0px